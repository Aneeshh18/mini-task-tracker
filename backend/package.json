{
  "name": "backend",
  "version": "1.0.0",
  "description": "Mini task tracker backend",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "npm run build && jest --runInBand",
    "test:coverage": "npm run build && jest --coverage --runInBand",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "express",
    "typescript",
    "mongoose",
    "redis",
    "jwt"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.2.1",
    "redis": "^5.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^11.0.1",
    "redis-mock": "^0.56.3",
    "supertest": "^7.2.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
